<div class="vertical light ">
    <div class="wrapper">
        {{> header}}
        {{> aside-left}}
        <main role="main" class="main-content">
            <div class="container-fluid">
                <div class="row justify-content-center">

                    <div class="col-12">
                        <h2 class="mb-2 page-title">Nhóm sản phẩm</h2>
                        <p class="card-text">Quản lí nhóm sản phẩm. </p>
                        <div class="row my-4">
                            <!-- Small table -->
                            <div class="col-md-12">
                                <div class="card shadow">
                                    <div class="card-body">
                                        <!-- table -->
                                        <div class="table_header">
                                            <div class="">
                                                <button class="btn btn-primary" data-toggle="modal"
                                                    data-target="#exampleModal">ADD</button>
                                                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                                                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog modal__size" role="document">
                                                        <div class="modal-content model__content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="exampleModalLabel">Thêm mới
                                                                    nhóm sản phẩm</h5>
                                                                <button type="button" class="close" data-dismiss="modal"
                                                                    aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body" class="width: 100%">
                                                                <form>
                                                                    <div class="form-row">
                                                                        <div class="col-md-4 mb-3">
                                                                            <label for="validationDefault01">Mã</label>
                                                                            <input type="text" class="form-control"
                                                                                id="validationDefault01"
                                                                                placeholder="First name" value="Mark"
                                                                                required>
                                                                        </div>
                                                                        <div class="col-md-5 mb-3">
                                                                            <label for="validationDefault02">Tên nhóm
                                                                                sản phẩm</label>
                                                                            <input type="text" class="form-control"
                                                                                id="validationDefault02"
                                                                                placeholder="Last name" value="Otto"
                                                                                required>
                                                                        </div>
                                                                        <div class="custom-control custom-switch col-md-3"
                                                                            style="display: flex; justify-content: center;align-items: center;">
                                                                            <input type="checkbox"
                                                                                class="custom-control-input"
                                                                                id="customSwitch1">
                                                                            <label class="custom-control-label block"
                                                                                for="customSwitch1">Áp dụng</label>
                                                                        </div>
                                                                        <div class="col-md-12 mb-3 mt-3">
                                                                            <label for="validationDefault02">Ghi
                                                                                chú</label>
                                                                            <input type="text" class="form-control"
                                                                                id="validationDefault02"
                                                                                placeholder="Last name" value="Otto"
                                                                                required>
                                                                        </div>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary"
                                                                    data-dismiss="modal">Close</button>
                                                                <button type="button" class="btn btn-primary">Save
                                                                    changes</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="box__input-headerTable">
                                                <input type="text" class="form-control input-headerTable"
                                                    placeholder="Tìm kiếm ..">
                                                <span class="fe fe-14 fe-search iconSearch_headerTable"></span>
                                            </div>
                                        </div>
                                        <table class="datatables table table-bordered">
                                            <thead style="background-color: #F0F0F0;">
                                                <tr>
                                                    <th>Active</th>
                                                    <th>Code</th>
                                                    <th>Name</th>
                                                    <th>Ghi chú</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        <div class="active"></div>
                                                    </td>
                                                    <td>Imani Lara</td>
                                                    <td>(478) 446-9234</td>
                                                    <td>Asset Management</td>
                                                    <td>
                                                        <i class="fe fe-edit-3 icon__table icon__table-edit"></i>
                                                        <i class="fe fe-trash-2 icon__table icon__table-trash"></i>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div> <!-- simple table -->
                        </div> <!-- end section -->
                    </div> <!-- .col-12 -->

                </div> <!-- .row -->
            </div> <!-- .container-fluid -->
        </main> <!-- main -->
    </div>
</div>